#!/bin/sh
batteryIcons=',,'
batteryLevel=$(cat /sys/class/power_supply/BAT0/capacity)
chargingStatus=$(cat /sys/class/power_supply/BAT0/status)

drawbattery() {
  $((   ))
}

[ "${chargingStatus}" != "Discharging" ] && \
  batteryString="${batteryLevel}%"
[ "${chargingStatus}" = "Discharging"  ] && \
  drawbattery
echo $batteryString
